{
	"name": "TuleapIntegration",
	"version": "",
	"license-name": "GPL-3.0-only",
	"author": [
		"[http://www.hallowelt.com Hallo Welt! GmbH]"
	],
	"url": "http://www.hallowelt.com",
	"descriptionmsg": "tuleapintegration-desc",
	"requires": {
		"MediaWiki": ">= 1.35.0"
	},
	"MessagesDirs": {
		"TuleapIntegration": "i18n"
	},
	"AutoloadNamespaces": {
		"TuleapIntegration\\": "src/",
		"TuleapIntegration\\Tests\\": "tests/phpunit"
	},
	"ServiceWiringFiles": [
		"includes/ServiceWiring.php"
	],
	"Hooks": {
		"LoadExtensionSchemaUpdates": "registerTable"
	},
	"HookHandlers": {
		"registerTable": {
			"class": "TuleapIntegration\\Hook\\RegisterTable"
		}
	},
	"RestRoutes": [
		{
			"method": "POST",
			"path": "/tuleap/create_instance/{name}",
			"class": "TuleapIntegration\\Rest\\CreateInstanceHandler",
			"services": [ "ProcessManager", "InstanceManager", "MainConfig" ]
		},
		{
			"path": "/tuleap/process_status/{pid}",
			"class": "TuleapIntegration\\Rest\\ProcessStatusHandler",
			"services": [ "ProcessManager" ]
		},
		{
			"path": "/tuleap/instance_status/{name}",
			"class": "TuleapIntegration\\Rest\\InstanceStatusHandler",
			"services": [ "InstanceManager" ]
		}
	],
	"config":  {
		"TuleapInstanceDirectory": {
			"value": null
		}
	},
	"manifest_version": 2
}
